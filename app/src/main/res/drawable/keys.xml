<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/keyboard_keys_pressed"/>
            <corners android:radius="0dp"/>
            <stroke android:color="@color/keyboard_keys_border"
                android:width="1dp"/>
        </shape>


    </item>

    <item>

        <shape>
            <solid android:color="@color/keyboard_keys_normal"/>
            <corners android:radius="0dp"/>
            <stroke android:color="@color/keyboard_keys_border"
                android:width="1dp"/>
        </shape>


    </item>

</selector>